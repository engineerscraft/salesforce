<assembly>
	<formats>
		<format>tar</format>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>src/main/resources/bin</directory>
			<outputDirectory>sfm</outputDirectory>
			<includes>
				<include>*.sh</include>
				<include>*.bat</include>
			</includes>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>sfm/config</outputDirectory>
			<includes>
				<include>application-prod.properties</include>
				<include>log4j2.xml</include>
				<include>keystore.p12</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target</directory>
			<outputDirectory>sfm/lib</outputDirectory>
			<includes>
				<include>sfm.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>sfm/log</outputDirectory>
			<fileMode>0755</fileMode>
			<excludes>
				<exclude>**/*</exclude>
			</excludes>
		</fileSet>
	</fileSets>
</assembly>